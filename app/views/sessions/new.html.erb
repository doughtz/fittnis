<% provide(:title, "Login") %>
<h1>Log In</h1>
<div class="row">
  <div class="col-md-3 col-md-offset-3", style="height: 238px; border-right: 1px solid gray; text-align: right">
    <!-- Social Sign In START -->
    <span class="helper"><%= link_to image_tag('sign_in_google', size: "222x49"), "/auth/google_oauth2", id: "sign_in" %>
    <%= link_to image_tag('sign_in_facebook', size: "222x49"), "/auth/facebook", id: "sign_in" %></span>
    <!-- Social Sign In END -->
  </div>
  <div class="col-md-3", style="border-left: 1px solid gray; overflow: hidden">
    <div class="helper2">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(forgot password)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <padright>Remember me on this computer</padright>
      <% end %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>

    
  </div>
</div>

