<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container" style="padding-top: 10px; height: 5px">
    <div id="some-div" data-no-turbolink> <%= link_to "fittnis", '/', id: "logo" %> </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li style="padding-right: 5px;"><%= link_to "Users", users_path, :style => 'background-color: orange', :class => "navbar-nav li a:hover" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Upload Video", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
        <li style="padding-right: 5px;"><%= link_to "Sign Up", '/users/new', :style => 'background-color: orange', :class => "navbar-nav li a:hover" %></li>
        <li><%= link_to "Log in", '/login' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>