<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container" style="padding-top: 10px; height: 5px">
    <div id="some-div" data-no-turbolink> <%= link_to "fittnis", '/', id: "logo" %> </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <div class="dropdown-toggle" id="profile-image" data-toggle="dropdown" style="margin-right: 50px">
              <center><%= current_user.image == nil ? image_tag("generic-user", size: "45x45", class: "img-responsive img-circle") : image_tag(current_user.image, size: "45x45", class: "img-responsive img-circle") %></center>
            </div>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <% if current_user.admin? %>
              <li><%= link_to "Upload Video", '#' %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
        <li style="padding-right: 5px;"><%= link_to "Sign Up", '/users/new', :style => 'background-color: orange', :class => "navbar-nav li a:hover" %></li>
        <li><%= link_to "Log in", '/login' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>