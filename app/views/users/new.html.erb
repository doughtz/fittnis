<% provide(:title, 'Sign up') %>
<div style="background:white !important" class="jumbotron">
      <h1>Sign up</h1>
  <div class="error_messages_box">
    <%= render 'shared/error_messages' %>
  </div>
  <center>
  <!-- Social Sign In START -->
    <%= link_to image_tag('sign_in_google', size: "161x37"), "/auth/google_oauth2", id: "sign_in" %>
    <%= link_to image_tag('sign_in_facebook', size: "161x37"), "/auth/facebook", id: "sign_in" %>
    <!-- Social Sign In END -->
    </center>
    <p></p>
  <div class="row">
  <div class="col-md-6 col-md-offset-3"> 
  
<%= form_for(@user) do |f| %>
  
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :username %>
      <%= f.text_field :username %>      

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>
      
      <%= f.label :time_zone, "Time Zone" %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>
</div>