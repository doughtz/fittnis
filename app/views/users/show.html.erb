        <%= @user.yesterday_calspersec %>
      </div>
    </div>
    </div>
    <div class="col-xs-6 col-md-3 shrinkLeft">
      <div class="youtube-box" style="overflow:hidden;">
      <div class="col-xs-12 top-spacing" style="margin-bottom: 10px;">
